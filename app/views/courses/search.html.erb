<%= render 'partials/nav' %>

<p id="notice"><%= notice %></p>
<div class="flex-container">
  <div class="courses-search">
    <h1>Courses</h1>

    <table>
      <thead>
      <tr>
        <th>Dept</th>
        <th>Course num</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.dept %></td>
          <td><%= course.course_num %></td>
          <td><%= course.name %></td>
          <td><%= link_to 'Show', course %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Course', new_course_path %>
  </div>
</div>

<%= render "partials/footer" %>

