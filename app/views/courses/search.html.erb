<%= render 'partials/nav' %>

<p id="notice"><%= notice %></p>
<div class="flex-container">
  <div class="courses-search">

    <div class="searchbar-container">
      <form autocomplete="off" method="get" action="<%= search_courses_path %>">
        <input type="text" placeholder="<%= search_courses_path %>" name="q[full_name_cont]" style="width:67%" id="courseID">
        <button type="submit" class="btn btn-secondary w-25 d-inline">Search</button>
      </form>
    </div>

    <table class="search-results">
      <thead>
      <tr>
        <th>Dept</th>
        <th>Course</th>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td width="10%"><%= course.dept %></td>
          <td width="12%"><%= course.course_num %></td>
          <td width="68%">
            <%= course.name %>
            <p class="course-description">
              Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old.
              <!-- Put course.description here-->
            </p>
          </td>
          <td width="10%" class="view-btn"><%= link_to 'Show', course %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <div class="add-new">
      <p>Don't see the class you're looking for?</p>
      <%= link_to 'Add New Course', new_course_path, :class => "a-btn" %>
    </div>
  </div>
</div>


<%= render "partials/footer" %>
