<p id="notice"><%= notice %></p>

<p>
  <strong>Dept:</strong>
  <%= @course.dept %>
</p>

<p>
  <strong>Course num:</strong>
  <%= @course.course_num %>
</p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>


<%= link_to 'Write a Review', new_professor_course_review_path(@professor, @course)%>
<%if(@course.reviews.blank?)%>
  <h3> No Reviews </h3>
<%else%>
  <br>
  <strong> Average Review: </strong>
  <%= @avg_review %>

  <% @course.reviews.each do |review| %>
    <p>
      Overall Rating: <%= review.overall_rating%> ,
      Professor: <%= Professor.find(review.professor_id).full_name%>

      <%= link_to 'Show', review %> |
      <%= link_to 'Edit', edit_professor_course_review_path(:id => review.id, :professor_id => @professor.id, :course_id => review.course_id) %> |
      <%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <%end%>
<%end%>
