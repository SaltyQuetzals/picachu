<%= form_for @review do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.full_messages.each_with_index do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div id="selectProfessor">
    <%= form.label :professor_id %>
    <% unless @professor_id.nil? %>
      <%= select_tag(:professor_id, options_from_collection_for_select(@professors, :id, :full_name, :selected => @professor_id), :required => true) %>
    <% else %>
      <%= select_tag(:professor_id, options_from_collection_for_select(@professors, :id, :full_name), :required => true, :prompt => 'Select a Professor') %>
    <% end %>
  </div>

  <div id="selectCourse">
    <%= form.label :course_id %>
    <% unless @course_id.nil? %>
      <%= select_tag(:course_id, options_from_collection_for_select(@courses, :id, :full_course_name, :selected => @course_id), :required => true) %>
    <% else %>
      <%= select_tag(:course_id, options_from_collection_for_select(@courses, :id, :full_course_name), :required => true, :prompt => 'Select a Course') %>
    <% end %>
  </div>


  <div id="field radio-inline">
    <%= form.label :overall_rating %>
    <% (1..5).each_with_index do |i| %>
      <%= form.radio_button :overall_rating, i %> <%= i %> <br/>
    <% end %>
  </div>

  <div id="letterGrade">
    <%= form.label :letter_grade %>

    <%= form.select :letter_grade, %w[A B C D F Q S U] %>
  </div>

  <div id="semester">
    <%= form.label :semester %>

    <%= form.select :semester, %w[Spring Summer Fall] %>
  </div>

  <div id="year">
    <%= form.label :year %>
    <%= form.select :year, 2000..Date.today.year %>
  </div>

  <div id="field" class="checkbox-style">
    <%= form.label :course_required %>
    <%= form.check_box :course_required %>
  </div>


  <hr>
  <h4>Course Review</h4>

  <div id="field">
    <%= form.label :interesting %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :interesting, i+1 %> <%= elem %> <br/>
    <% end %>

  </div>

  <div id="difficult">
    <%= form.label :difficult %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :difficult, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="field" class="checkbox-style">
    <%= form.label :standardized_course %>
    <%= form.check_box :standardized_course %>
  </div>

  <div id="courseOtherThoughts">
    <%= form.label :course_other_thoughts %>
    <%= form.text_field :course_other_thoughts, :placeholder => 'ex. Loved the class' %>
  </div>


  <hr>
  <h4>Professor Review</h4>

  <div id="field" class="checkbox-style">
    <%= form.label :used_textbook %>
    <%= form.check_box :used_textbook %>
  </div>

  <div id="field"  class="checkbox-style">
    <%= form.label :attendance_mandatory %>
    <%= form.check_box :attendance_mandatory %>
  </div>

  <div id="courseFormat">
    <%= form.label :course_format %>
    <%= form.select :course_format, %w[Exam Project Homework] %>
  </div>

  <div id="caredAboutMaterial">
    <%= form.label :cared_about_material %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :cared_about_material, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="openToQuestions">
    <%= form.label :open_to_questions %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :open_to_questions, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="caredAboutStudents">
    <%= form.label :cared_about_students %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :cared_about_students, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="clearGrading">
    <%= form.label :clear_grading %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :clear_grading, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="homeworkHeavy">
    <%= form.label :homework_heavy %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :homework_heavy, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="clearExplanations">
    <%= form.label :clear_explanations %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :clear_explanations, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="fastGrading">
    <%= form.label :fast_grading %>
    <% ['Strongly Disagree', 'Slightly Disagree', 'Neither Disagree nor Agree', 'Slightly Agree', 'Strongly Agree'].each_with_index do | elem, i | %>
      <%= form.radio_button :fast_grading, i+1 %> <%= elem %> <br/>
    <% end %>
  </div>

  <div id="professorOtherThoughts">
    <%= form.label :professor_other_thoughts %>
    <%= form.text_field :professor_other_thoughts, :placeholder => 'ex. Helpful office hours' %>
  </div>


  <div id="actions" class="mt-3">
    <%= form.submit :class => "btn btn-primary w-50" %>
  </div>
<% end %>
